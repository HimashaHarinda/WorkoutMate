extends layout

block content
  header.main-header
  nav.navbar.navbar-static-top#navbar
    .container
      .navbar-header
        a.navbar-brand
          b Workout
          | Mate.      
        button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar-collapse")
          i.fa.fa-bars
      // Collect the nav links, forms, and other content for toggling
      #navbar-collapse.collapse.navbar-collapse.pull-left
        ul.nav.navbar-nav          
              li#username
                a #{sessionUser}
              li
                a(href="/feed") Feed
              li
                a(href="/addpost") Add Posts
              
              li
                a(href="/showcomments") Comments
              li
                a(href="/") Logout

  each posts, post in feed  
    .info-box.bg-blue
        .info-box-content#feedbox
         span.info-box-number #{posts.post} 
         span.info-box-text by  #{posts.added_by}
         span.info-box-text at  #{posts.added_date}
         form.form-horizontal(action='/addcomment/#{posts.added_by}/#{posts.post}', method='post')#formcomment
          .box-body#commentbox
            .form-group        
              .col-sm-4
                  input#inputEmail3.form-control(placeholder="comment", type="text", name="comment")
                button.btn.btn-info.pull-left(type="submit") Add comment
              
          // /.info-box-content   